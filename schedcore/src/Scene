#
# Our balls!
#

useserver camera
  create
    perspective:
    end
  end
  modify
    position:
      x: 6
      y: 8
      z: 6
    end
    lookAt:
      x: 0
      y: 0
      z: 0
    end
  end
end

create
  create transform
    position:
      x: 0
      y: 0
      z: 0
    end
  end
  create simpleModel
    XYZCoordinates:
      axisLength: 8
    end
  end
end

create
  create transform
    position:
      x: 0
      y: 0
      z: 0
    end
  end
  create simpleModel
    lineGrid:
      xDivisions: 100
      zDivisions: 100
      xSize: 10
      zSize: 10
    end
  end
end


create
  create transform
    position:
      x: 0
      y: 4
      z: 0
    end
  end
  create light
    color:
      r: .1
      g: .1
      b: .1
    end
    point:
      intensity: 100
    end
  end
end

create 
  create light
    color:
      r: .3
      g: .3
      b: .3
    end
    directional:
      direction:
        x: 0
        y: -1
        z: 0
      end
    end
  end
end

use box
  modify transform
    position:
      x: 0
      y: 0
      z: 0
    end
  end
end

use ball
  modify transform
    position:
      x: .5
      y: 10
      z: .5
    end
  end
end
